# Top level config
root = true

### Core EditorConfig properties ###
[*]
charset = utf-8
trim_trailing_whitespace = true

# Identation and spacing
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 80

# New lines
end_of_line = lf
insert_final_newline = true

# Braces
indent_brace_style = otbs

### Markdown ###
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

### Makefile ###
[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 0
